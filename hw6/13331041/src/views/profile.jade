doctype html
html
  head
    title= 'student_home'
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/stylesheets/mycss.css')
    //- link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
  body
    #user
      if user.state == 'teacher'
        nav(class='navbar navbar-inverse navbar-fixed')
          div(class='container')
            div.row
              div.col-md-8
                div(class='navbar-head')
                  a(class='navbar-brand', href) HomeWork
                div(class='navbar-collapse collapse' id='navbar')
                  ul(class = 'nav navbar-nav')
                    li
                      a(href='/home') home
                    li.active
                      a(href='/profile') profile
                    li
                      a(href='/create') create
                    li
                      a(href='/history') history
                    li
                      a(href='/homework') homework
              div.col-md-4
                ul.nav.navbar-nav
                  li
                    a.navbar-link.nav #{user.username}
                  li
                    a(href="/" class="navbar-link") Log out
      else
        nav(class='navbar navbar-inverse navbar-fixed')
          div(class='container')
            div.row
              div.col-md-8
                div(class='navbar-head')
                  a(class='navbar-brand', href) HomeWork
                div(class='navbar-collapse collapse' id='navbar')
                  ul(class = 'nav navbar-nav')
                    li
                      a(href='/home') home
                    li.active
                      a(href='/profile') profile
                    li
                      a(href='/history') submit
                    li
                      a(href='/history') history
                    li
                      a(href='/my_homework') my homework
              div.col-md-4
                ul.nav.navbar-nav
                  li
                    a.navbar-link.nav #{user.username}
                  li
                    button(type="button" class="btn btn-info navbar-btn") Log out
      div.container
        div.row
          div.col-sm-6.col-md-4.col-md-offset-4
            #user
              h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
                div.signup-wall
                  ul.user-details
                    li Username ---> #{user.username}
                    li Email    ---> #{user.email}
                    li First Name ---> #{user.firstName} 
                    li Last Name ---> #{user.lastName}
                    li Course    ---> #{user.course}
                    li identity  ---> #{user.state}
                a(href="/" class="navbar-link") Log out