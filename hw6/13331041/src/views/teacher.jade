doctype html
html
  head
    title= 'student_home'
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css')
    //- link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
  body
    nav(class='navbar navbar-inverse navbar-fixed')
      div(class='container')
        div.row
          div.col-md-8
            div(class='navbar-head')
              button(type="button", class="navbar-toggle collapsed", data-toggle='collapse', data-target='#navbar',aria-exparanded='false','aria-control'='navbar')
                span(class='sr-only')
                for (var i = 0; i < 3; ++i)
                span(class='icon-bar')
              a(class='navbar-brand', href) HomeWork
            div(class='navbar-collapse collapse' id='navbar')
              ul(class = 'nav navbar-nav')
                li.active
                  a(href='') home
                li
                  a(href='/profile') profile
                if #{user.state}
                  li
                    a(href='/create') create
                else
                  li
                    a(href='/history') history
          div.col-md-4
            ul.nav.navbar-nav
              li
                a.navbar-link.nav #{user.username}
              li
                button(type="button" class="btn btn-info navbar-btn") Log out