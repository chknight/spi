                  for (var i = 0; i < 3; ++i)
                  span(class='icon-bar')
                a(class='navbar-brand', href) HomeWork
              div(class='navbar-collapse collapse' id='navbar')
                ul(class = 'nav navbar-nav')
                  li.active
                    a(href='') home
                  li
                    a(href='') profile
                  li
                    a(href='') homework
                  li
                    a(href='history') history
            div.col-md-4
              ul.nav.navbar-nav
                li
                  a.navbar-link.nav #{user.username}
                li
                  button(type="button" class="btn btn-info navbar-btn") Log out
      div.container
        div.row
          div.col-sm-6.col-md-10.col-md-offset-1    
            div.well
              p Welcome to our homework system. Your homework is as shown below
        div.row
          div.col-sm-6.col-md-10.col-md-offset-1
